<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
  <% @toc.each_with_index do |chapter, idx| %>
    <li class="pure-menu-item"> 
    <a href=<%= "/chapters/#{idx + 1}" %> class="pure-menu-link"><%= chapter %></a>
    </li>
  <% end %>
  </ul>
</div>

<div class="content">
      <ul>
        <% @files.each do |file| %>
        <li class="pure-menu-item">
        <a href=<%= "http://localhost:4567/#{file}" %> class="pure-menu-item"><%=file%></a>
        </li> 
        <% end %>
      </ul>
      <a href=<%= "http://www.localhost:4567/#{@sort_url}" %>><%= @sort_button %></a>
